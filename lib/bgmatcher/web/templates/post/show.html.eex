<h2>Show Post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

</ul>

<span><%= link "Edit", to: user_post_path(@conn, :edit, @user, @post), class: "button" %></span>
<span><%= link "Back", to: user_post_path(@conn, :index, @user), class: "button" %></span>
